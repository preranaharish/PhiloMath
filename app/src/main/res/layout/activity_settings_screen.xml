<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings"
    android:orientation="vertical">



        <Switch
            android:id="@+id/notify"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/cardviewback"
            android:hint="Notifies the words you learnt regularly"
            android:drawablePadding="20dp"
            android:gravity="left|center"
            android:height="60dp"
            android:padding="20dp"
            android:text="NOTIFICATIONS"
            android:drawableLeft="@drawable/ic_notifications_black_24dp"
            android:textColor="@android:color/white"
            android:theme="@style/SCBSwitch" />

    <Button
        android:id="@+id/Backup"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingTop="2dp"
        android:text="Backup"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="20dp"
        android:background="@drawable/cardviewback"
        android:drawableLeft="@drawable/ic_backup_black_24dp" />

    <Button
        android:id="@+id/restore"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingTop="2dp"
        android:text="Restore"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="20dp"
        android:background="@drawable/cardviewback"
        android:drawableLeft="@drawable/ic_backup_black_24dp" />

    <Button
        android:id="@+id/contactus"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingTop="2dp"
        android:text="Contact us"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="20dp"
        android:background="@drawable/cardviewback"
        android:drawableLeft="@drawable/ic_help_black_24dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingTop="2dp"
        android:text="Logout"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="20dp"
        android:background="@drawable/cardviewback"
        android:drawableLeft="@drawable/ic_exit_to_app_black_24dp" />


</LinearLayout>