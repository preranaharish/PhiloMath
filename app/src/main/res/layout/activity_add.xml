<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



    <EditText
        android:drawableLeft="@drawable/ic_search_black_24dp1"
        android:drawablePadding="50dp"
        android:id="@+id/txtName"
        android:layout_marginTop="35dp"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter a word"
        android:textStyle="bold"
        android:textSize="30dp"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/curson_color"
        android:layout_gravity="center"
        android:ems="10" />

                <android.support.v7.widget.CardView
                    android:id="@+id/trendingcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtName"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="20dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/trending"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:maxHeight="2dp"
        android:src="@drawable/ic_trending_up_black_24dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/secTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/trending"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Trending"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="15dp"
        android:text="Hello1"
        android:layout_marginLeft="40dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="15dp"
        android:text="Hello2"
        android:layout_marginLeft="140dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="15dp"
        android:text="Hello3"
        android:layout_marginLeft="240dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="70dp"
        android:text="Hello4"
        android:layout_marginLeft="40dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="70dp"
        android:text="Hello5"
        android:layout_marginLeft="140dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:id="@+id/hello4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="70dp"
        android:text="Hello6"
        android:layout_marginLeft="240dp"
        android:theme="@style/PrimaryFlatButton" />
</RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                                android:id="@+id/quiz"
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:layout_below="@+id/trendingcard"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                app:cardCornerRadius="20dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/recent"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:maxHeight="2dp"
                                            android:src="@drawable/ic_history_black_24dp"
                                            android:layout_marginLeft="18dp"
                                            android:layout_marginTop="25dp"
                                            />
                                        <TextView
                                            android:id="@+id/thirdTxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_gravity="right"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="20dp"
                                            android:layout_toRightOf="@+id/recent"
                                            android:gravity="center"
                                            android:paddingTop="10dp"
                                            android:text="Recent"
                                            android:textColor="@android:color/secondary_text_dark"
                                            android:textColorHint="@android:color/darker_gray"
                                            android:textSize="20dp"
                                             />



                                        <ImageView
                                            android:id="@+id/B"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:maxHeight="2dp"
                                            android:src="@drawable/letterb"
                                            android:layout_below="@+id/thirdTxt"
                                            android:layout_marginLeft="70dp"
                                            android:layout_marginTop="40dp"
                                            />

                                        <Button
                                            android:id="@+id/recent1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/thirdTxt"
                                            android:layout_toRightOf="@+id/B"
                                            android:layout_marginTop="35dp"
                                            android:text="Benevolent"
                                            android:layout_marginLeft="10dp"
                                            android:theme="@style/PrimaryFlatButton"
                                           />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_below="@+id/recent1"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginLeft="140dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_height="0.1dp"
                                            android:background="#1FFFFFFF"
                                            />


                                        <ImageView
                                            android:id="@+id/B1"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:maxHeight="2dp"
                                            android:src="@drawable/letterb"
                                            android:layout_below="@+id/B"
                                            android:layout_marginLeft="70dp"
                                            android:layout_marginTop="40dp"
                                            />

                                        <Button
                                            android:id="@+id/recent2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/recent1"
                                            android:layout_toRightOf="@+id/B"
                                            android:layout_marginTop="35dp"
                                            android:text="Benevolent"
                                            android:layout_marginLeft="10dp"
                                            android:theme="@style/PrimaryFlatButton"
                                          />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_below="@+id/recent2"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginLeft="140dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_height="0.1dp"
                                            android:background="#1FFFFFFF"
                                           />

                                        <ImageView
                                            android:id="@+id/B2"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:maxHeight="2dp"
                                            android:src="@drawable/letterb"
                                            android:layout_below="@+id/B1"
                                            android:layout_marginLeft="70dp"
                                            android:layout_marginTop="40dp"
                                          />

                                        <Button
                                            android:id="@+id/recent3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/recent2"
                                            android:layout_toRightOf="@+id/B"
                                            android:layout_marginTop="35dp"
                                            android:text="Benevolent"
                                            android:layout_marginLeft="10dp"
                                            android:theme="@style/PrimaryFlatButton"
                                            />
<!--                                        <View-->
<!--                                            android:layout_width="match_parent"-->
<!--                                            android:id="@+id/view"-->
<!--                                            android:layout_below="@+id/recent3"-->
<!--                                            android:layout_marginTop="10dp"-->
<!--                                            android:layout_marginLeft="140dp"-->
<!--                                            android:layout_marginRight="20dp"-->
<!--                                            android:layout_height="0.1dp"-->
<!--                                            android:background="#1FFFFFFF"-->
<!--                                            />-->



                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quiz"
                    android:text="The beauty of learning is that, no one can take it away from you"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>