<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/curson_color"
                android:backgroundTint="@android:color/white"
                android:drawablePadding="50dp"

                android:ems="10"
                android:gravity="center"
                android:hint="Enter a word"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/secTxt"
   android:layout_toRightOf="@+id/txtName"
    android:src="@drawable/ic_search_black_24dp"
    android:clickable="true"
    android:onClick="clicked"
    android:backgroundTint="@android:color/transparent"/>


    <ImageView
        android:id="@+id/trending"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:maxHeight="2dp"
        android:src="@drawable/ic_trending_up_black_24dp"
        android:layout_below="@+id/txtName"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/secTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/recent"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Trending"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="15dp"
        android:text="Hello1"
        android:layout_marginLeft="40dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="15dp"
        android:text="Hello2"
        android:layout_marginLeft="140dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="15dp"
        android:text="Hello3"
        android:layout_marginLeft="240dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="70dp"
        android:text="Hello4"
        android:layout_marginLeft="40dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="70dp"
        android:text="Hello5"
        android:layout_marginLeft="140dp"
        android:theme="@style/PrimaryFlatButton" />
    <Button
        android:id="@+id/hello4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secTxt"
        android:layout_marginTop="70dp"
        android:text="Hello6"
        android:layout_marginLeft="240dp"
        android:theme="@style/PrimaryFlatButton" />


    <ImageView
        android:id="@+id/recent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:maxHeight="2dp"
        android:src="@drawable/ic_history_black_24dp"
        android:layout_below="@+id/hello4"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/thirdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello4"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/recent"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Recent"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20dp"
        android:visibility="visible" />


            <TextView
                android:id="@+id/B"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/thirdTxt"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/square"
                android:gravity="center"
                android:maxHeight="2dp"
                android:text="B"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
        android:id="@+id/recent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdTxt"
        android:layout_toRightOf="@+id/B"
        android:layout_marginTop="35dp"
        android:text="Benevolent"
                android:textColor="@android:color/holo_blue_dark"
        android:layout_marginLeft="10dp"
        android:theme="@style/PrimaryFlatButton" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/recent1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.1dp"
        android:background="#c0c0c0"
        android:backgroundTint="#c0c0c0"
        />


    <TextView
        android:id="@+id/B1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:maxHeight="2dp"
        android:background="@drawable/square"
        android:layout_below="@+id/B"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:text="B"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/recent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent1"
        android:layout_toRightOf="@+id/B"
        android:layout_marginTop="35dp"
        android:text="Benevolent"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginLeft="10dp"
        android:theme="@style/PrimaryFlatButton" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/recent2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.1dp"
        android:background="#c0c0c0"
        />

    <TextView
        android:id="@+id/B2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:maxHeight="2dp"
        android:background="@drawable/square"
        android:layout_below="@+id/B1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:text="B"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <Button
        android:id="@+id/recent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent2"
        android:layout_toRightOf="@+id/B"
        android:layout_marginTop="35dp"
        android:text="Benevolent"
        android:textColor="@android:color/holo_blue_dark"

        android:layout_marginLeft="10dp"
        android:theme="@style/PrimaryFlatButton" />
    <View
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:layout_below="@+id/recent3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.1dp"
        android:background="#c0c0c0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@android:color/white"
        android:text="- The beauty of learning is that, no one can take it away from you"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>


    <!--    <Button-->
    <!--        android:id="@+id/btnSave"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:gravity="center"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:visibility="gone"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:textColor="@android:color/black"-->
    <!--        android:background="@android:color/holo_blue_dark"-->
    <!--        android:text="Save" />-->

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>