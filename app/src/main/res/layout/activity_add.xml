    <android.support.v7.widget.CardView
        android:id="@+id/recentcard"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/trendingcard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:maxHeight="2dp"
                app:srcCompat="@drawable/ic_history_black_24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/thirdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/recent"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Recent"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20dp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/B"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/thirdTxt"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/square"
                android:gravity="center"
                android:maxHeight="2dp"
                android:text="B"
                android:textColor="#5880f4"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/recent1"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thirdTxt"
                android:layout_toRightOf="@+id/B"
                android:layout_marginTop="40dp"
                android:text="Benevolent"
                android:layout_marginLeft="10dp"
                android:theme="@style/PrimaryFlatButton" />



            <TextView
                android:id="@+id/B1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxHeight="2dp"
                android:background="@drawable/square"
                android:layout_below="@+id/B"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:text="B"
                android:textColor="#5880f4"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <Button
                android:id="@+id/recent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recent1"
                android:layout_toRightOf="@+id/B"
                android:layout_marginTop="42dp"
                android:text="Benevolent"
                android:layout_marginLeft="10dp"
                android:theme="@style/PrimaryFlatButton" />



            <TextView
                android:id="@+id/B2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxHeight="2dp"
                android:background="@drawable/square"
                android:layout_below="@+id/B1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:text="B"
                android:textColor="#5880f4"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <Button
                android:id="@+id/recent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recent2"
                android:layout_toRightOf="@+id/B"
                android:layout_marginTop="43dp"
                android:text="Benevolent"
                android:layout_marginLeft="10dp"
                android:theme="@style/PrimaryFlatButton" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
