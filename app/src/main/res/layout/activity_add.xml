        android:paddingTop="10dp"
        android:text="Powered By Oxford Dictionary"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20dp"
        android:visibility="visible" />




</LinearLayout>


