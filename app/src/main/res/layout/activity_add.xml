<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:alpha="0.7">
    </View>

    <TextView
        android:id="@+id/fstTxt"
        android:layout_below="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:textSize="25dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:text="Enter word:" />

    <EditText
        android:id="@+id/txtName"
        android:layout_below="@+id/logo"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Enter Word"
        android:textStyle="bold"
        android:textSize="30dp"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/curson_color"
        android:layout_gravity="center"
        android:ems="10" />
    <TextView
        android:id="@+id/secTxt"
        android:layout_below="@id/txtName"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:text="Meaning"
        android:gravity="center"
       android:layout_gravity="center" />
    <EditText
        android:id="@+id/txtLocation"
        android:layout_width="match_parent"
        android:layout_below="@id/secTxt"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_edittext"
        android:hint="A person who enjoys learning new facts"
       android:layout_gravity="center"
        android:gravity="center"
        android:ems="10" />
    <TextView
        android:id="@+id/example_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLocation"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:text="Example:"
        android:paddingTop="10dp"
        android:textSize="18dp"
       android:layout_gravity="center"/>
    <EditText
        android:id="@+id/examples"
        android:layout_below="@id/example_text"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:hint="You are a Philomath!"
        android:gravity="center"
        android:ems="10"/>

    <Button
        android:id="@+id/search_dict"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#228B22"
        android:onClick="clicked"
        android:shadowColor="@android:color/black"
        android:soundEffectsEnabled="true"
        android:text="Search From Oxford Dictionary"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
      android:layout_gravity="center"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/black"
        android:background="@android:color/holo_blue_dark"
        android:text="Save" />

    <ImageView
        android:id="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/fstTxt"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon" />


</RelativeLayout>