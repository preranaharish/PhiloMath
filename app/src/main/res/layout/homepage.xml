<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/tool_bar"
                layout="@layout/activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/wordicon"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:contentDescription="Computer Society"
                android:src="@drawable/wordday" />

            <TextView
                android:id="@+id/wordtext"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/wordicon"
                android:gravity="center"
                android:text="Words For The Day"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:visibility="visible" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/csy"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:contentDescription="Computer Society"
                        android:src="@drawable/background16" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom|right"
                android:layout_margin="16dp"
                android:background="#f70d1a"
                android:contentDescription="Add new word"
                android:src="@drawable/ic_action_name" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>