<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:text="Click on the cards to reveal\n Yesterday's most trending words"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"/>
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:id="@+id/one"
        android:layout_below="@+id/heading"
        android:onClick="card1"
        android:clickable="true"
        android:elevation="4dp"
        android:layout_height="350dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Word 1"
                android:id="@+id/word1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="30dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_toRightOf="@+id/one"
        android:layout_below="@+id/heading"
        android:onClick="card2"
        android:clickable="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/two">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Word 2"
                android:id="@+id/word2"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="30dp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_below="@+id/one"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:onClick="card3"
        android:id="@+id/three">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Word 3"
                android:id="@+id/word3"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="30dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@id/three"
        android:clickable="true"
        android:onClick="card4"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"><RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Word 4"
        android:id="@+id/word4"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="30dp"/>
    </RelativeLayout></android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       android:id="@+id/skip"
        android:text="SKIP"/>
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>