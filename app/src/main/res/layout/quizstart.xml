<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/signupgradient"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/quizimage"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/quizline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Philo Quiz"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/quiztag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn . Take Quiz . Repeat"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <Button
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/roundbutton"
        android:text="Start Quiz"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/borderbutton"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


</LinearLayout>