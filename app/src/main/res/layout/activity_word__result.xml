<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:backgroundTint="#eeffff"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/meaningCard"
                android:fadingEdge="horizontal"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cardviewback"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:translationY="-90dp"
                app:cardCornerRadius="60dp"
                android:backgroundTint="@android:color/transparent"
                >
                <RelativeLayout
                    android:background="@drawable/cardviewback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:id="@+id/linearword"

                        android:gravity="center">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:id="@+id/phoneitcs"
                            android:padding="5dp"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_volume_up_black_24dp" />


                        <TextView
                            android:id="@+id/word"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="bottom"
                            android:paddingTop="20dp"
                            android:text="Lacoste"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:capitalize="characters"
                            />

                        <ImageButton
                            android:id="@+id/save"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:background="#00ffffff"
                            android:src="@drawable/star" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/meaning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="10dp"
                        android:paddingTop="30dp"
                        android:text="Meaning"
                        android:textColor="@android:color/white"
                        android:paddingBottom="15dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="19dp"
                        android:layout_below="@+id/linearword"
                        android:textAlignment="center"


                        />



                    <TextView
                        android:id="@+id/examplesentence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="8dp"
                        android:textColor="@android:color/white"
                        android:text="The example sentence of the word"
                        android:textAllCaps="false"
                        android:textSize="19sp"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        android:layout_below="@+id/meaning"/>

                    <TextView
                        android:id="@+id/synonyms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textColor="@android:color/white"
                        android:layout_marginRight="8dp"            android:paddingTop="25dp"
                        android:text="Synonyms"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:textSize="17dp"
                        android:textStyle="bold"


                        android:layout_below="@+id/examplesentence"/>

                    <TextView
                        android:id="@+id/synonymsword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/synonyms"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="8dp"
                        android:paddingTop="10dp"
                        android:textColor="@android:color/white"
                        android:text="Synonym1, Synonym2,Synonym3"
                        android:textAllCaps="false"
                        android:textSize="16dp" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/synonymsword"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/editableframe"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:id="@+id/pencil"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="left|bottom"
                            app:srcCompat="@drawable/pencil" />

                        <AutoCompleteTextView
                            android:id="@+id/Additionalnote_new"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/black"
                            android:layout_marginRight="10dp"
                            android:focusedByDefault="false"
                            android:hint="Additional Details"
                            android:letterSpacing=".05"
                            android:layout_gravity="top|left"
                            />

                        <ImageView
                            android:id="@+id/savenote"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right|bottom"
                            android:clickable="true"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/save_icon" />


                    </FrameLayout>

                    <!--        <ImageView-->
                    <!--            android:id="@+id/edit"-->
                    <!--            android:layout_width="40dp"-->
                    <!--            android:layout_height="40dp"-->
                    <!--            android:layout_below="@+id/editableframe"-->
                    <!--            android:layout_marginLeft="8dp"-->
                    <!--            android:layout_marginRight="8dp"-->
                    <!--            android:layout_marginTop="46dp"-->
                    <!--            android:layout_marginBottom="100dp"-->
                    <!--            android:maxHeight="2dp"-->
                    <!--            app:srcCompat="@drawable/pencil" />-->

                    <!--        <EditText-->
                    <!--            android:id="@+id/Additionalnote"-->
                    <!--            android:layout_width="match_parent"-->
                    <!--            android:layout_height="wrap_content"-->
                    <!--            android:layout_below="@+id/editableframe"-->
                    <!--            android:layout_marginLeft="10dp"-->
                    <!--            android:layout_marginTop="40dp"-->
                    <!--            android:layout_marginRight="10dp"-->
                    <!--            android:layout_toRightOf="@+id/edit"-->
                    <!--            android:focusedByDefault="false"-->
                    <!--            android:hint="Additional Details"-->
                    <!--            android:letterSpacing=".5"-->
                    <!--            android:maxHeight="400dp" />-->













                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editableframe"
                        android:id="@+id/btn_arrow"
                        app:icon="@drawable/ic_arrow_forward_black_24dp"
                        android:visibility="gone"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/arrowBtn"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:padding="8dp"
                        android:layout_margin="8dp"
                        android:layout_below="@id/btn_arrow"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        android:visibility="gone"


                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="dnfjsdknfjsd"
                            />


                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        <LinearLayout
    android:id="@+id/scores"
    android:background="@drawable/scorerect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:translationY="-225dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/meaningCard"
    >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Probability of importance based on our data model of previous year question papers"
                android:layout_below="@+id/meaningCard"
                android:layout_marginTop="150dp"
                android:gravity="center"
                android:textStyle="bold"
                android:focusedByDefault="false"
                android:visibility="visible"
                android:id="@+id/addtext"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearscores"
                >


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/CATS"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/GATS"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        />

            </LinearLayout>


</LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                android:visibility="visible"
                android:id="@+id/cardviewofwords"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scores"
                app:layout_constraintBottom_toBottomOf="@id/scores">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:layout_below="@id/scores"
                        android:textStyle="bold"
                        android:id="@+id/graphs1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"

                        android:padding="10dp"
                        android:textSize="20dp"

                        android:text="Relative comparision of similar words"/>


                    <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="25dp"
                       android:text="word1"
                        android:layout_marginTop="30sp"
                        android:id="@+id/word1"
                       android:textColor="#64b5f6"
                       android:textAlignment="viewStart"
                        android:layout_marginLeft="15dp"/>

                    <com.rahuldevelops.philomathapp.FloatTextProgressBar
                        android:id="@+id/floatTextProgressBar1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:fillColor1="#64b5f6"
                        app:rectColor1="#64b5f6"
                        app:triangleColor1="#64b5f6"
                        app:backgroundColor1="#e3f2fd"
                       />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="word1"
                        android:id="@+id/word2"
                        android:layout_marginTop="10sp"
                        android:textColor="#ff7043"
                        android:textAlignment="viewStart"
                        android:layout_marginLeft="15dp"/>

                    <com.rahuldevelops.philomathapp.FloatTextProgressBar
                        android:id="@+id/floatTextProgressBar2"
                        android:layout_width="match_parent"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="50dp"
                        app:fillColor1="#ff7043"
                        app:rectColor1="#ff7043"
                        app:triangleColor1="#ff7043"
                        app:backgroundColor1="#fbe9e7"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="word1"
                        android:layout_marginTop="10sp"
                        android:id="@+id/word3"
                        android:textColor="#66bb6a"
                        android:textAlignment="viewStart"
                        android:layout_marginLeft="15dp"/>

                    <com.rahuldevelops.philomathapp.FloatTextProgressBar
                        android:id="@+id/floatTextProgressBar3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:fillColor1="#66bb6a"
                        app:rectColor1="#66bb6a"
                        app:triangleColor1="#66bb6a"
                        app:backgroundColor1="#e8f5e9"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="word1"
                        android:id="@+id/word4"
                        android:layout_marginTop="10sp"
                        android:textColor="#ef5350"
                        android:textAlignment="viewStart"
                        android:layout_marginLeft="15dp"/>

                    <com.rahuldevelops.philomathapp.FloatTextProgressBar
                        android:id="@+id/floatTextProgressBar4"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="50dp"
                        app:fillColor1="#ef5350"
                        app:rectColor1="#ef5350"
                        app:triangleColor1="#ef5350"
                        app:backgroundColor1="#ffebee"
                        android:layout_marginBottom="10dp"

                        />




                </LinearLayout>


            </androidx.cardview.widget.CardView>










    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</RelativeLayout>