<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <android.support.v7.widget.CardView
                android:id="@+id/cv_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPaddingBottom="1dp"
                app:contentPaddingRight="2dp"
                app:contentPaddingLeft="2dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                >



                <TextView
                    android:id="@+id/letter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/thirdTxt"
                    android:background="@drawable/square"
                    android:gravity="center"
                    android:maxHeight="2dp"
                    android:text="B"
                    android:textColor="#5880f4"
                    android:textSize="35dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:paddingTop="20dp"
                    android:text="Word"
                    android:layout_marginBottom="50dp"
                    android:textAllCaps="true"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/speech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="50dp"
                    android:paddingTop="20dp"
                    android:text="parts of speech"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="140dp"
                    android:paddingTop="30dp"
                    android:text="Meaning"
                    android:paddingBottom="15dp"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:onClick="Phoneitc"
                    app:srcCompat="@drawable/ic_volume_up_black_24dp" />


                <TextView
                    android:id="@+id/examplesentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginBottom="50dp"
                    android:paddingTop="10dp"
                    android:text="The example sentence of the word"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:layout_below="@+id/meaning"/>

                <TextView
                    android:id="@+id/similar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="240dp"
                    android:paddingTop="10dp"
                    android:text="Similar words:"
                    android:layout_marginBottom="50dp"
                    android:textColor="#58CEF4"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:layout_below="@+id/meaning"/>


                <TextView
                    android:id="@+id/synonymsword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/similar"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="50dp"
                    android:paddingTop="10dp"
                    android:text="Synonym list"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:layout_below="@+id/examplesentence"/>



                <ImageView
                    android:layout_below="@+id/synonymsword"
                    android:id="@+id/edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="360dp"
                    android:layout_marginBottom="30dp"
                    android:maxHeight="2dp"
                    app:srcCompat="@drawable/pencil" />

                <EditText
                    android:id="@+id/Additionalnote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Save Your own examples to remember the word"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/edit"
                    android:layout_marginTop="350dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:focusedByDefault="false"
                    android:maxHeight="400dp"
                    />


            </android.support.v7.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here is the Detailed anyalysis of the word with respect to exam"
                android:layout_below="@+id/cv_user"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/holo_red_light"/>



            <ProgressBar
                android:id="@+id/CAT"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@id/cv_user"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="55dp"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_user"
                android:text="50"
                android:textSize="25dp"
                android:id="@+id/tv"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CAT"
                android:text="CAT"
                android:id="@+id/cattext"
                android:textSize="15dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="10dp"/>
            <ProgressBar
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/gre"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_below="@id/cv_user"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="55dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/circular1"
                android:secondaryProgress="100"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CAT"
                android:text="GRE/GMAT"
                android:textSize="15dp"
                android:id="@+id/gmat"
                android:layout_marginLeft="265dp"
                android:layout_marginTop="10dp"/>

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:visibility="gone"
                android:layout_below="@id/gmat"/>
        </RelativeLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:id="@+id/btnSave1"/>
</RelativeLayout>