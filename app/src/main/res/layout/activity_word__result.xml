<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/linearword"
            android:gravity="center">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:onClick="Phoneitc"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/ic_volume_up_black_24dp" />


            <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_mono"
            android:layout_gravity="bottom"
            android:paddingTop="20dp"
            android:text="Lacoste"
            android:textSize="24dp"
             />
            <RatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:stepSize="1"
                android:isIndicator="false"
                android:numStars="1" />
        </LinearLayout>

            <TextView
                android:id="@+id/meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:paddingTop="30dp"
                android:text="Meaning"
                android:paddingBottom="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="19dp"
                android:layout_below="@+id/linearword"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_mono"

                />



        <TextView
            android:id="@+id/examplesentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="8dp"
            android:text="The example sentence of the word"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_below="@+id/meaning"/>

        <TextView
            android:id="@+id/synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"            android:paddingTop="25dp"
            android:text="Synonyms"

            android:textAllCaps="false"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_mono"

            android:layout_below="@+id/examplesentence"/>

        <TextView
            android:id="@+id/synonymsword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/synonyms"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/roboto_mono"
            android:letterSpacing=".15"
            android:paddingTop="10dp"
            android:text="Synonym1, Synonym2,Synonym3"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/synonymsword"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="100dp"
            android:maxHeight="2dp"
            app:srcCompat="@drawable/pencil" />

        <EditText
            android:id="@+id/Additionalnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/synonymsword"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/edit"
            android:focusedByDefault="false"
            android:hint="Additional Details"
            android:letterSpacing=".5"
            android:maxHeight="400dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is the Detailed anyalysis of the word with respect to exam"
            android:layout_below="@+id/Additionalnote"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:focusedByDefault="false"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />



        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/CATS"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@id/Additionalnote"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp" />
<!--    <ProgressBar-->
<!--        android:id="@+id/CAT"-->
<!--        style="?android:attr/progressBarStyleHorizontal"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="150dp"-->
<!--        android:layout_below="@id/Additionalnote"-->
<!--        android:layout_marginLeft="30dp"-->
<!--        android:layout_marginTop="55dp"-->
<!--        android:max="100"-->
<!--        android:progress="20"-->
<!--        android:progressDrawable="@drawable/circular"-->
<!--        android:secondaryProgress="100" />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Additionalnote"
        android:text=""
        android:textSize="25dp"
        android:id="@+id/tv"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CATS"
        android:text="CAT"
        android:id="@+id/cattext"
        android:textSize="15dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="10dp"/>
    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/gre"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/Additionalnote"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="55dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/circular1"
        android:secondaryProgress="100"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CATS"
        android:text="GRE/GMAT"
        android:textSize="15dp"
        android:id="@+id/gmat"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="10dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/gmat"/>




    </RelativeLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:id="@+id/btnSave1"/>
</RelativeLayout>