<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:title="Notification"
        android:key="notification"
        android:summary="Receive timely notifications"
        android:defaultValue="false"
        android:icon="@drawable/ic_notifications_black_24dp"
        />
    <Preference
        android:title="Backup"
        android:key="backup"
        android:summary="Save your words so that they are never lost"
        android:icon="@drawable/ic_backup_black_24dp"
        />
    <Preference
        android:title="Restore"
        android:key="restore"
        android:summary="Recover your previously saved words"
        android:icon="@drawable/ic_restore_black_24dp"
        />
    <Preference
        android:title="Contact Us"
        android:key="help"
        android:icon="@drawable/ic_help_black_24dp"
        />
    <Preference
        android:title="Logout"
        android:icon="@drawable/ic_exit_to_app_black_24dp"
        />
</PreferenceScreen>
